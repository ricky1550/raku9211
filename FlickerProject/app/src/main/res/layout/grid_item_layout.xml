<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/flip_rl"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>

    <ProgressBar
        android:id="@+id/image_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></ProgressBar>

    <RelativeLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/SkyBlue"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/image_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/image_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_title_tv"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
</RelativeLayout>